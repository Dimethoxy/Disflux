<?xml version="1.0" encoding="utf-8"?>
<installer-gui-script minSpecVersion="1">
    <title>Disflux Plugin Installer</title>
    <options customize="always" allow-external-scripts="no"/>
    <choices-outline>
        <line choice="choiceVST3"/>
        <line choice="choiceCLAP"/>
        <line choice="choiceAU"/>
    </choices-outline>

    <choice id="choiceVST3" title="Install VST3 Plugin" start_selected="true">
        <pkg-ref id="com.dimethoxy.disflux.vst3"/>
    </choice>

    <choice id="choiceCLAP" title="Install CLAP Plugin" start_selected="true">
        <pkg-ref id="com.dimthoxy.disflux.clap"/>
    </choice>

    <choice id="choiceAU" title="Install AU Plugin" start_selected="true">
        <pkg-ref id="com.dimethoxy.disflux.au"/>
    </choice>

    <pkg-ref id="com.dimethoxy.disflux.vst3" installKBytes="5000">#VST3.pkg</pkg-ref>
    <pkg-ref id="com.dimethoxy.disflux.clap" installKBytes="5000">#CLAP.pkg</pkg-ref>
    <pkg-ref id="com.dimethoxy.disflux.au" installKBytes="5000">#AU.pkg</pkg-ref>
</installer-gui-script>
